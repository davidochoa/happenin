.row
  .large-12.columns
    %br>
    %form{ action: events_path }
      .row.collapse
        .large-10.columns
          = text_field_tag :q, params[:q], placeholder: "Search what's happenin' around..."
        .large-2.columns
          %button{ class: 'button postfix' }
            %i.fi-magnifying-glass
            Search
.row
  %ul.medium-block-grid-3
    - @events.each do |event|
      %li
        .panel
          %h3
            %i.fi-align-right
            = event['name']
          %br>
          %i.fi-clock
          = " #{Time.parse(event['start_time']).to_formatted_s(:long)}"
          %br>
          %i.fi-marker
          = " #{event['location']}"
          %br>
          %i.fi-social-facebook
          %hr>
